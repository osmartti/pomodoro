# Run Pomodoro
clear
pink=$'\e[95m'
reset=$'\e[0m'
echo -e "${pink}"
ascii_pomodoro
echo -e "${reset}"
echo "ðŸ’» ðŸ“– ðŸ‘“ $WORK_MINUTES minutes of focus..."
countdown "$WORK_SECONDS" "Work"

echo "â˜• Time for a break: $BREAK_MINUTES minutes..."
countdown "$BREAK_SECONDS" "Break"

echo "âœ… Pomodoro session complete!"